<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!--gazebo plugins-->
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />

  <link name="base_footprint"></link>

  <!--joints-->
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="chassis" />
  </joint>

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0.15 0.17 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0.15 -0.23 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint type="continuous" name="left_rear_wheel_hinge">
    <origin xyz="-0.15 0.17 0" rpy="0 0 0"/>
    <child link="left_rear_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint type="continuous" name="right_rear_wheel_hinge">
    <origin xyz="-0.15 -0.23 0" rpy="0 0 0"/>
    <child link="right_rear_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.29 0 0.15" rpy="0 0 0"/>
    <child link="camera_link"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <joint type="fixed" name="camera_optical_joint">
    <origin xyz="0 0 0" rpy="-1.5707 0 -1.5707"/>
    <child link="camera_link_optical"/>
    <parent link="camera_link"/>
  </joint>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.05 0 0.3" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <!--chassis-->
  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".5 .3 .1"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename = "package://my_robot/meshes/chassis.dae"/>
        <!--box size=".4 .2 .1"/-->
      </geometry>
    </visual>



  </link>

  <!--left front wheel-->
  <link name='left_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5707"/> 
      <geometry>
        <cylinder radius = ".1" length = ".05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5708"/>
      <geometry>
        <mesh filename = "package://my_robot/meshes/wheel.dae"/>
        <!--cylinder radius = ".1" length = ".08"/-->
      </geometry>
    </visual>
  </link>

  <!--right front wheel-->
  <link name='right_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/> 
      <geometry>
        <cylinder radius = ".1" length = ".05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/>
      <geometry>
        <mesh filename = "package://my_robot/meshes/wheel.dae"/>
        <!--cylinder radius = ".1" length = ".08"/-->
      </geometry>
    </visual>
  </link>

  <!--left rear wheel-->
  <link name='left_rear_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5707"/> 
      <geometry>
        <cylinder radius = ".1" length = ".05"/>
      </geometry>
    </collision>

    <visual name='left_rear_wheel_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5708 1.5708"/>
      <geometry>
        <mesh filename = "package://my_robot/meshes/wheel.dae"/>
        <!--cylinder radius = ".1" length = ".08"/-->
      </geometry>
    </visual>
  </link>

  <!--right rear wheel-->
  <link name='right_rear_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/> 
      <geometry>
        <cylinder radius = ".1" length = ".05"/>
      </geometry>
    </collision>

    <visual name='right_rear_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5708 1.5708"/>
      <geometry>
        <mesh filename = "package://my_robot/meshes/wheel.dae"/>
        <!--cylinder radius = ".1" length = ".08"/-->
      </geometry>
    </visual>
  </link>

  <!--camera-->
  <link name='camera_link'>
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </collision>

    <visual name='camera_link_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </visual>

  </link>

  <!--hokuyo lidar-->
  <link name='hokuyo'>
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>

    <visual name='visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename = "package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

  </link>

  <link name="camera_link_optical">
  </link>


  <!--camera-->
  <gazebo reference="camera">
    <material>Gazebo/Red</material>
  </gazebo>


</robot>


